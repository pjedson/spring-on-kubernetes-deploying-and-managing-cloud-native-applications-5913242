<configuration>
<springProfile name="dev">
<include resource="org/springframework/boot/logging/logback/base.xml"/>
</springProfile>
<springProfile name="default">
<appender name="jsonCosoleAppender" class="ch.qos.logback.core.ConsoleAppender">
<encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
</appender>
<root level="INFO">
<appender-ref ref="jsonCosoleAppender"/>
</root>
</springProfile>

</configuration>